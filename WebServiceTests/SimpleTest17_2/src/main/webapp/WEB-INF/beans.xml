<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:jee="http://www.springframework.org/schema/jee"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
        http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
	<bean id="messageBeanTarget" class="org.sample.springmvc.extra.MessageBean" scope="prototype">
	
	</bean>
	
	<bean id="threadLocalTargetSource" class="org.springframework.aop.target.ThreadLocalTargetSource">
	    <property name="targetBeanName" value="messageBeanTarget" />
	</bean>
	
	<bean id="mb" class="org.springframework.aop.framework.ProxyFactoryBean">
	    <property name="targetSource" ref="threadLocalTargetSource" />
	</bean>
</beans>